<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.book_barrter.Home_screen"
    android:orientation="vertical"
    android:background="@drawable/background"
    >


    <include
        layout="@layout/toolbar_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"

            android:gravity="center"
            >

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:onClick="Book_catalog"

                android:id="@+id/book_catalogklklk"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circlebackgrounyellow"
                        android:src="@drawable/ic_local_library_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="Books Catalog"
                        android:id="@+id/header1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Check various type of books"
                        android:padding="10dp"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"

                android:layout_margin="10dp"


                android:onClick="Book_uplaod"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/backgroundcolorpink"
                        android:src="@drawable/ic_cloud_upload_black_24dp"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Upload Books"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Upload a book to Catalog"
                        android:padding="10dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:onClick="Books_Exchange"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/colorgroundnewgreen"
                        android:src="@drawable/ic_import_export_black_24dp" />

                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Exchanged Books"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Detials about your books"
                        android:padding="10dp"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"

                android:layout_margin="10dp"
                android:onClick="Manage_Requests">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circlbackground"
                        android:padding="5dp"
                        android:src="@drawable/ic_event_note_black_24dp" />

                    <TextView
                        android:id="@+id/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="Manage Requests"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Requests about exchanging books"
                        android:padding="5dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:onClick="History">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circlebackground"
                        android:src="@drawable/ic_history_black_24dp" />

                    <TextView
                        android:id="@+id/header5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="Responces"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Responce of your requests"
                        android:padding="5dp"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"

                android:layout_margin="10dp"
                android:onClick="My_profile">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/groundnew"
                        android:src="@drawable/ic_accessibility_black_24dp"
                        android:padding="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="My Profile"
                        android:id="@+id/header6"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"

                        android:text="Manage your profile"
                        android:padding="5dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
