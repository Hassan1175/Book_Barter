<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="155dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/borrow_book_photo"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/logo"
                android:layout_below="@+id/borrow_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/borrow_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/book_photo"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/borrow_book_photo"
                android:layout_toRightOf="@+id/borrow_book_photo"
                android:text="TextView" />

            <TextView
                android:id="@+id/b_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/borrow_type"
                android:layout_alignStart="@+id/borrow_type" />

            <TextView
                android:id="@+id/b_Muser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/borrow_book_photo"
                android:layout_alignLeft="@+id/b_writer_name"
                android:layout_alignStart="@+id/b_writer_name" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/borrow_book_photo"
                android:layout_alignStart="@+id/borrow_book_photo"
                android:layout_below="@+id/borrow_book_photo"
                android:text="Requested by" />

            <Button
                android:id="@+id/confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Confirmation"
                android:layout_alignBaseline="@+id/b_writer_name"
                android:layout_alignBottom="@+id/b_writer_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</ScrollView>