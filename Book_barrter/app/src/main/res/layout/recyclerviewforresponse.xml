<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="215dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/R_book_photo"
                android:layout_width="80dp"
                android:layout_height="100dp"

                android:src="@drawable/logo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="Name"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/R_book_photo"
                android:layout_toEndOf="@+id/R_book_photo" />

            <TextView
                android:id="@+id/R_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView18"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignLeft="@+id/R_type"
                android:layout_alignStart="@+id/R_type" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Type"
                android:layout_below="@+id/textView18"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18" />

            <TextView
                android:id="@+id/R_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView20"
                android:layout_alignBottom="@+id/textView20"
                android:layout_toRightOf="@+id/textView31"
                android:layout_toEndOf="@+id/textView31"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="12dp"
                android:text="Date" />

            <TextView
                android:id="@+id/R_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView29"
                android:layout_alignBottom="@+id/textView29"
                android:layout_alignLeft="@+id/R_type"
                android:layout_alignStart="@+id/R_type" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:layout_below="@+id/R_book_photo"
                android:layout_alignLeft="@+id/textView29"
                android:layout_alignStart="@+id/textView29" />

            <TextView
                android:id="@+id/R_Muser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView31"
                android:layout_alignBottom="@+id/textView31"
                android:layout_alignLeft="@+id/R_Date"
                android:layout_alignStart="@+id/R_Date" />

            <Button
                android:id="@+id/confirmation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/confirmation"
                android:layout_alignLeft="@+id/textView31"
                android:layout_alignStart="@+id/textView31"
                android:text="Status" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/R_Muser"
                android:layout_alignStart="@+id/R_Muser"
                android:layout_alignTop="@+id/textView4"
                android:text="TextView" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</ScrollView>