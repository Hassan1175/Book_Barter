<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="155dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/R_book_photo"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/R_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/R_book_photo"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/R_book_photo"
                android:layout_toRightOf="@+id/R_book_photo"
                android:text="TextView" />

            <TextView
            android:id="@+id/R_writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/R_type"
            android:layout_alignLeft="@+id/R_type"
            android:layout_alignStart="@+id/R_type"
            android:layout_marginTop="24dp" />






            <TextView
                android:id="@+id/R_Muser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/R_writer_name"
                android:layout_alignStart="@+id/R_writer_name" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Owner"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/R_book_photo"
                android:layout_alignStart="@+id/R_book_photo" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Owner"
                android:layout_below="@+id/confirmation"
                android:layout_alignLeft="@+id/R_Muser"
                android:layout_alignStart="@+id/R_Muser" />

            <Button
                android:id="@+id/confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Confirmation"
                android:layout_alignBaseline="@+id/R_writer_name"
                android:layout_alignBottom="@+id/R_writer_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <TextView
            android:id="@+id/requested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Owner"
            android:layout_below="@+id/confirmation"
            android:layout_alignLeft="@+id/R_Muser"
            android:layout_alignStart="@+id/R_Muser" />

    </android.support.v7.widget.CardView>

</ScrollView>